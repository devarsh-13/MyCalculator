<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/etShowNumber"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@color/grayy"
        android:ems="10"
        android:gravity="right"

        android:inputType="textPersonName"
        android:paddingTop="20pt"
        android:paddingRight="10pt"
        android:text="0"
        android:textSize="36sp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"

        android:background="@color/whiteback">


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0pt"
            android:layout_weight="1">

            <Button
                android:id="@+id/button4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="buClean"
                android:text="AC" />

            <Button
                android:id="@+id/buPlusMinues"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="buNumberEvent"
                android:text="+/-" />

            <Button
                android:id="@+id/buPercent"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="perEvent"
                android:text="%" />

            <Button
                android:id="@+id/buDiv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/orange"
                android:onClick="opEvent"
                android:text="/"
                android:textColor="@color/white" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0pt"
            android:layout_weight="1">

            <Button
                android:id="@+id/bu7"
                android:layout_width="0pt"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="buNumberEvent"
                android:text="7" />

            <Button
                android:id="@+id/bu8"
                android:layout_width="0pt"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="8" />

            <Button
                android:id="@+id/bu9"
                android:layout_width="0pt"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="buNumberEvent"
                android:text="9" />

            <Button
                android:id="@+id/buMulti"
                android:layout_width="0pt"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/orange"
                android:onClick="opEvent"
                android:text="*"
                android:textColor="@color/white" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0pt"
            android:layout_weight="1">

            <Button
                android:id="@+id/bu4"
                android:layout_width="0pt"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="buNumberEvent"
                android:text="4" />

            <Button
                android:id="@+id/bu5"
                android:layout_width="0pt"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="buNumberEvent"
                android:text="5" />

            <Button
                android:id="@+id/bu6"
                android:layout_width="0pt"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="buNumberEvent"
                android:text="6" />

            <Button
                android:id="@+id/buSub"
                android:layout_width="0pt"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/orange"
                android:onClick="opEvent"
                android:text="-"
                android:textColor="@color/white" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0pt"
            android:layout_weight="1">

            <Button
                android:id="@+id/bu1"
                android:layout_width="0pt"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="buNumberEvent"
                android:text="1" />

            <Button
                android:id="@+id/bu2"
                android:layout_width="0pt"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="buNumberEvent"
                android:text="2" />

            <Button
                android:id="@+id/bu3"
                android:layout_width="0pt"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="buNumberEvent"
                android:text="3" />

            <Button
                android:id="@+id/buSum"
                android:layout_width="0pt"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/orange"
                android:onClick="opEvent"
                android:text="+"
                android:textColor="@color/white" />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/whiteback"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bu0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:onClick="buNumberEvent"
            android:text="0" />

        <Button
            android:id="@+id/buDot"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:baselineAligned="false"
            android:onClick="buNumberEvent"
            android:text="." />

        <Button
            android:id="@+id/buEquel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/orange"
            android:onClick="equelEvent"
            android:text="="
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>